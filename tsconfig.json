{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"allowJs": true,
		"checkJs": true,
		"baseUrl": ".",
		/* Preact Config */
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true,
		"paths": {
			"react": [
				"./node_modules/preact/compat/"
			],
			"react-dom": [
				"./node_modules/preact/compat/"
			],
			"worker_threads": [
				"./tests/stubs/worker_threads.ts"
			],
			"node:worker_threads": [
				"./tests/stubs/worker_threads.ts"
			]
		}
	},
	"include": [
		"node_modules/vite/client.d.ts",
		"**/*"
	]
}